<?xml version='1.0' encoding='utf-8'?>
<widget id="com.cloudstaff.evilboss.actionscan" version="1.0.8" xmlns="http://www.w3.org/ns/widgets"
        xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>Action-Scan</name>
  <description>
    A QR scanner application For cloudstaff.
  </description>
  <author email="jr.evilboss@gmail.com" href="https://github.com/evilboss">
    Jr Reyes
  </author>
  <content src="index.html"/>
  <plugin name="cordova-plugin-whitelist" version="1"/>
  <access origin="*"/>
  <allow-intent href="http://*/*"/>
  <allow-intent href="https://*/*"/>
  <allow-intent href="tel:*"/>
  <allow-intent href="sms:*"/>
  <allow-intent href="mailto:*"/>
  <allow-intent href="geo:*"/>
  <platform name="android">
    <allow-intent href="market:*"/>
    <icon src="res/icons/android/drawable-ldpi/ic_launcher.png" density="ldpi"/>
    <icon src="res/icons/android/drawable-mdpi/ic_launcher.png" density="mdpi"/>
    <icon src="res/icons/android/drawable-hdpi/ic_launcher.png" density="hdpi"/>
    <icon src="res/icons/android/drawable-xhdpi/ic_launcher.png" density="xhdpi"/>
    <feature name="InAppBrowser">
      <param name="android-package" value="org.apache.cordova.InAppBrowser" />
    </feature>

  </platform>
</widget>
